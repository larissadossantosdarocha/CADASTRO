    <script>
        function Enviar() {
  var dados = document.getElementById('dados').value;
  var Nome,tel = document.getElementById('Nome,tel').value;
  var idade,dono = document.getElementById('idade,dono').value;
  var Raça,CPF = document.getElementById('Raça,cpf').value;
  var Nascimento = document.getElementById('Nascimento').value;

  if (dados,Nome,Nascimento,tel,CPF,dono,idade,Raça.trim() === "") {
    window.alert("Campo vazio");
    document.getElementById('dados,Nome,Nascimento,tel,CPF,dono,idade,Raça').value;
  } else {
    window.alert("Pet cadastrado com sucesso!");
  }
}
